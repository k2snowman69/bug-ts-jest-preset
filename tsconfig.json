{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["ES2016"],
    "module": "ES2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "outDir": "./dist",
    "removeComments": false,
    "rootDir": "./src",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2016"
  },
  "include": ["./src/**/*"]
}
